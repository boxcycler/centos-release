{
  "_comment": "Build with `packer build 75-dtw.json`",
  "builders": [
    {
      "type": "vagrant",

      "box_name": "boxcycler/centos75-dt-release",
      "box_provider": "virtualbox",
      "box_file": ".ovf",

      "builder": {
        "type": "virtualbox-ovf",
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
        "headless": "{{ user `headless` }}",
        "output_directory": "{{user `winhome`}}\\Vagrant\\output-{{ user `vm_name` }}-virtualbox-iso",
        "post_shutdown_delay": "10s",
        "shutdown_command": "{{ user `shutdown_command` }}",
        "ssh_password": "{{ user `ssh_password` }}",
        "ssh_username": "{{ user `ssh_username` }}",
        "ssh_wait_timeout": "10000s",
        "vm_name": "{{ user `vm_name` }}"
      }
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "{{user `winhome`}}\\Vagrant\\box\\{{.Provider}}\\{{user `vm_name`}}-{{user `version`}}.box",
      "type": "vagrant",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "{{user `wincwd`}}\\script\\motd.sh",
        "{{user `wincwd`}}\\script\\update.sh"
      ],
      "type": "shell",
      "expect_disconnect": true,
      "start_retry_timeout": "30m"
    },
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "{{user `wincwd`}}\\script\\virtualbox.sh",
        "{{user `wincwd`}}\\script\\desktop.sh",
        "{{user `wincwd`}}\\script\\base.sh",
        "{{user `wincwd`}}\\script\\cleanup.sh"
      ],
      "type": "shell",
      "pause_before": "10s"
    }
  ],
  "variables": {
    "absroot": "{{env `ABSROOT`}}",
    "cleanup_build_tools": "false",
    "desktop": "true",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "headless": "false",
    "home": "{{env `HOME`}}",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "install_vagrant_key": "true",
    "no_proxy": "{{env `no_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "true",
    "vagrantfile_template": "",
    "version": "2018.7.29",
    "vm_name": "centos75-dt",
    "wincwd": "TBD",
    "winhome": "{{env `WINHOME`}}"
  }
}
