  "_comment": "Build with `packer build 75-dt.json`",
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "/u1/ova/virtualbox/centos75-dt-release.ova",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "output_directory": "output-{{ user `vm_name` }}-virtualbox-iso",
      "post_shutdown_delay": "10s",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "vm_name": "{{ user `vm_name` }}"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "box/{{.Provider}}/{{user `vm_name`}}-{{user `version`}}.box",
      "type": "vagrant",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "script/gitbase.sh",
        "script/update.sh"
      ],
      "type": "shell",
      "expect_disconnect": true,
      "start_retry_timeout": "30m"
    },
    {
      "type": "file",
      "source": "{{ user `git_source_dir` }}",
      "destination": "{{ user `git_target_dir` }}"
    },
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "script/base.sh",
        "script/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "cleanup_build_tools": "false",
    "desktop": "true",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "git_source_dir": "/git/centos/7/build",
    "git_target_dir": "/git/centos/7",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "install_vagrant_key": "true",
    "no_proxy": "{{env `no_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "shutdown_command": "echo 'packer'|sudo -S shutdown -P now",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "true",
    "vagrantfile_template": "tpl/vagrantfile-centos7-desktop.tpl",
    "version": "2018.5.31"
  }
}
